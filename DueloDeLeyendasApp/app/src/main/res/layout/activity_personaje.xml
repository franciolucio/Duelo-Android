<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:background="#8aace2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:id="@+id/imagen"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp" />

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Especialidades"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="2dip"
            android:background="#1208d5" />

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/especialidades"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textSize="20dp" />

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Debilidades"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="2dip"
            android:background="#1208d5" />

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/debilidades"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textSize="20dp" />

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mejor Posicion"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="2dip"
            android:background="#1208d5" />

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/mejorPosicion"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textSize="20dp" />
    </LinearLayout>

